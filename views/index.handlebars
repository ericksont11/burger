<h2>Select dish from the dropdown menu to begin ordering!</h2>

<form class="order-form">


    
    <select class="new-dish" id="dish">
        <option value="">Select a dish!</option>
        <option value="Kebab">Kebab</option>
        <option value="Fries">Fries</option>
        <option value="Hamburger">Hamburger</option>
        <option value="Salad">Salad</option>
        <option value="Coffee">Coffee</option>
    </select>

    <br>

    <div class="order-status">
        <label for="status">Order Status</label><br>
        <input type="radio" name="status" value="0" checked> First item of order<br>
        <input type="radio" name="status" value="1"> Only item being ordered
    </div>

    <button type="submit">Add Order</button>

</form>

<br>


<table class="table table-hover">

    <thead class="thead-dark">
        
        <tr>
            <th scope="col" >#Order Number</th>
            <th scope="col">Dish</th>
            <th scope="col">Add to order</th>
            <th scope="col">Status</th>
        </tr>
    </thead>
    {{#each orders}}
    <tbody>
        <tr>
            <th scope="row">{{id}}</th>
            <td id="dish-name{{id}}">
                {{dish}}
            </td>
            <td>
                <button type="button" class="btn btn-primary add" data-type="{{id}}">Add</button>
                <select class="another-dish" id="another-dish{{id}}">
                    <option value="">Add to your order!</option>
                    <option value="Kebab">Kebab</option>
                    <option value="Fries">Fries</option>
                    <option value="Hamburger">Hamburger</option>
                    <option value="Salad">Salad</option>
                    <option value="Coffee">Coffee</option>
                </select>
            </td>
            <td>
                <button type="button" class="btn btn-primary clicked" id="{{id}}">Preparing: {{delivered}}</button>
                <button type="button" class="btn btn-primary delete" id="{{id}}">X</button>
            </td>
        </tr>
    </tbody>
    {{/each}}
</table>



